<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="116dp"
            android:layout_height="106dp"
            app:srcCompat="@drawable/logo1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/agbalumo"
            android:text="Crop Management Guide"
            android:textColor="#CA911A"
            android:textSize="24sp" />

        <!-- Loading GIF -->

        <ImageView
            android:id="@+id/loadingImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="24dp"
            android:visibility="gone"
            android:contentDescription="Loading"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_bg"
            android:clipToOutline="true" />

        <!-- All crop guide UI here -->
        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spinnerCropProvince"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="8dp"
                android:background="@drawable/spinner_background" />

            <Button
                android:id="@+id/btnShowGuide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="#CA911A"
                android:text="Show Guide"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/txtCropGuide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="sans-serif"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="Crop management description refers to a summary or explanation of how crops are planned, cultivated, monitored, and harvested to achieve optimal growth and yield. It outlines the strategies and practices used to manage crops effectively throughout their life cycle."
                android:textColor="#B1000000"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnBackToMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:backgroundTint="#40C4FF"
                android:text="Home"
                android:textColor="#FFFFFF" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
